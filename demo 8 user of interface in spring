import org.springframework.stereotype.Component;

@Component
public interface Address {

	 String getAddress();	
}


===========================homeAddress

package anygroupid.wiprocc_sprjavabased.model;

import org.springframework.stereotype.Component;

@Component
public class HomeAddress implements Address{

	@Override
	public String getAddress() {
		
		return "Home Address";
	}

	
	
	
}


